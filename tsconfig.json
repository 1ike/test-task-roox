{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*",
    "declarations.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}